<%- layout('layouts/admin-panel.ejs') -%>
<div id="page-wrapper">
    <h2 class="page-header">
    	<span class="left"></span><span class="left"></span>
        Media <small>upload and manage medias</small>

        <span class="pull-right upload-file" style="border:1px solid black; padding:5px; border-radius:50%; font-size: 14px; cursor:pointer;"> <i class="fa fa-upload"></i> </span>
    </h2>

    <div class="col-md-6 col-md-offset-3">
			<form id="media-upload-form" >
				<input type="file" id="file-upload" class="form-control file-upload hide" name="upload" multiple>
			</form>
    </div>

		<div class="clearfix"></div>

		<% for (var i = 0; i < medias.length; i++) { %>
	    <div class="col-xs-4 col-md-2">
		    <span class="thumbnail">
		    	<i class="remove-media fa fa-remove" style="position:absolute; top:10px; right:30px; z-index:999; color:red; cursor:pointer; "></i>
		      <img src="<%= medias[i].path %>" data-id="<%= medias[i]._id %>">
		      <span class="col-xs-6 date text-left small"><strong>Date:</strong> <%= medias[i].uploadedOn %></span>
		      <span class="col-xs-6 text-right small"><%= medias[i].owner.username %></span>	
		      <input type="text" class="form-control" value="<%= medias[i].path %>" readonly>
		    </span>
	  	</div>
		<% } %>
</div>

