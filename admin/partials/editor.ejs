<div class="small-10 small-offset-1">
	<h2><%= editor.capitalize() %> editor</h2>
	<form class="editor" class="editor" id="editor-<%= editor %>" data-id="<%= isNew ? '' : single._id %>">
		<div class="form-group">
			<input autocomplete="off" type="text" name="title" placeholder="<%= isNew ? 'Title' : single.title %>" value="<%= isNew ? '' : single.title %>" class="small-12 editor-title form-control">
			<textarea name="editor1" id="text-editor"><%= isNew ? 'Write...' : single.body %></textarea>
			<input type="submit" class="btn btn-primary pull-right">
		</div>
	</form>
</div>


