<%- include("./partials/header") %>
      
	
    <div id="page-wrapper">

        <div class="container-fluid">
            <%= JSON.stringify(dashboard.configs) %>
            <%= JSON.stringify(user) %>
            <h1>Settings</h1>
			<form role="form" class="col-md-4" id="settings-form">
				<div class="form-group">
				    <label for="text">Website Name</label>
				    <input type="text" class="form-control" id="site-title" value="<%= dashboard.site %>">
				</div>
				<div class="form-group">
				    <label for="text">Website Tagline</label>
				    <input type="text" class="form-control" id="site-subtitle" value="<%= dashboard.subtitle %>">
				</div>
				<h4>Extra Info</h4>
				<div class="form-group">
				    <label for="text">Admin e-mail</label>
				    <input type="text" class="form-control" id="admin-email" value="<%= user.email %>">
				</div>
				<h4>Social Links</h4>
				<div class="form-group social-link-container">
					<% for(var i=0; i<dashboard.links.length; i++) {%>
					    <div class="social-link-single">
					   <i class="fa fa-fw fa-remove remove-sopcial-link"></i>
					   <label for="link" contenteditable><%= dashboard.links[i].website %></label>
					   <input type="text" name="link" class="form-control social-link" value="<%= dashboard.links[i].link %>"></div>
					<% } %>					
				</div>
				<div class="add-social-link add-link"><i class="fa fa-fw fa-plus"></i></div>

				<button type="submit" class="btn btn-default">Submit</button>
			</form>
        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->


<%- include("./partials/footer") %>

