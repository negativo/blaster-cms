<%- include("./partials/header") %>
    <div id="page-wrapper">
        <div class="container-fluid">
    <h2 class="page-header">
        Settings <small>edit global settings</small>
    </h2>
			<form role="form" class="col-md-4" id="settings-form">
				<div class="form-group">
				    <label for="text">Website Name</label>
				    <input type="text" class="form-control" id="site-title" value="<%= sitename %>">
				</div>
				<div class="form-group">
				    <label for="text">Website Tagline</label>
				    <input type="text" class="form-control" id="site-subtitle" value="<%= subtitle %>">
				</div>			
				<h4>Extra Info</h4>
				<div class="form-group">
				    <label for="text">Home page</label>
				    <select name="homepage" id="homepage" class="form-control">
				    	<option value="home-template">Static</option>
						<% for (var i = 0; i < pages.length; i++) { %>
							<option value="<%= pages[i]._id %>"><%= pages[i].title %></option>
						<% }; %>
				    </select>
				</div> 
				<h4>Social Links</h4>
				<div class="form-group social-link-container">
					<% for(var i=0; i< socials.length; i++) {%>
					    <div class="social-link-single">
					   <i class="fa fa-fw fa-remove remove-sopcial-link"></i>
					   <label for="link" contenteditable><%= socials[i].website %></label>
					   <input type="text" name="link" class="form-control social-link" value="<%= socials[i].link %>"></div>
					<% } %>					
				</div>
				<div class="add-social-link add-link"><i class="fa fa-fw fa-plus"></i></div>

				<button type="submit" class="btn btn-default">Submit</button>
			</form>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
<%- include("./partials/footer") %>

