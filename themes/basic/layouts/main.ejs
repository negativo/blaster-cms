<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title><%= pagetitle %></title>
	<link rel="stylesheet" href="/css/main.min.css">
	<link rel="stylesheet" href="/css/custom.css">
	<link rel="stylesheet" href="/components/foundation/css/normalize.min.css">
	<link rel="stylesheet" href="/components/foundation/css/foundation.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>
	<!-- admin bar -->
	<% if(isAuthenticated) { %>
		<%- partial('partials/admin-bar') %>
	<% } %>
	<!-- colored stripes useless -->
	<div class="ornament">
		<div class="object-bg"></div>
		<div class="function-bg"></div>
		<div class="parameter-bg"></div>
		<div class="statement-bg"></div>
	</div>
	<!-- MAIN WRAPPER -->
	<div class="site-wrapper small-10 small-offset-1 medium-8 medium-offset-2 large-6 large-offset-3">
		<!-- HEADER -->
		<header class="small-12 home">
			<h1><a href="/"><%= sitename %></h1></a><span class="subtitle"><%= subtitle %></span>
			<!-- NAVIGATION -->
			<%- partial("partials/nav") %>
	
			<i class="fa fa-fw fa-search search-button"></i>
			<div id="search-form">
				<form action="/search" method="POST">
					<input type="text" name="term" class="search-term">
					<input type="submit" value="search">
				</form>
			</div>	
		</header>


		<!-- BODY -->
		<%- body -%>

	</div><!-- MAIN WRAPPER -->

	<!-- FOOTER -->
	<footer class="main-footer small-12" >
		<div class="footer-container small-8 small-offset-2">
			<div class="footer-left">
				<span class="object">created</span>.<span class="function">with</span>(<span class="parameter">nomeCms</span>);			
			</div>

			<div class="footer-left">
				<span class="statement">if </span><span>( youLikedIt <span class="statement">&&</span> youKnowIt ) {</span>
				<br>
				<span>&nbsp;&nbsp;&nbsp;&nbsp;git.star().fork();</span><br>
				<span>&nbsp;&nbsp;&nbsp;&nbsp;fb.share();</span><br>
				<span>&nbsp;&nbsp;&nbsp;&nbsp;give.feedback();</span>
				<br>
				<span>};</span>
			</div>
			<div class="clearfix"></div>
		</div>
	</footer>

	<script src="/components/jquery/dist/jquery.min.js"></script>
	<script src="/components/foundation/js/foundation.min.js"></script>
	<script src="http://momentjs.com/downloads/moment.js"></script>
	<script src="/js/main.js"></script>

	<% if(analytics){ %>
		<script><%- analytics %></script>
	<% } %>
</body>
</html>